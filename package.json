{
  "name": "listener",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"supabase start\" \"npm run dev -w @listener/server\" \"npm run dev -w @listener/client\"",
    "build": "npm run build -w @listener/client",
    "start": "npm run start -w @listener/server",
    "test": "npm run test -ws --if-present",
    "test:coverage": "npm run test:coverage -ws --if-present",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "db:reset": "supabase db reset && echo 'Local database reset complete'",
    "dev:full": "npm run supabase:start && npm run dev",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "Listener application with Express backend and Vite frontend",
  "dependencies": {
    "@deepgram/sdk": "^4.0.1",
    "@supabase/supabase-js": "^2.49.7",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^5.2.2",
    "http-proxy-middleware": "^3.0.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "dotenv-flow": "^4.1.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4"
  }
}
