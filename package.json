{
  "name": "listener",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"supabase start\" \"npm run dev -w @listener/server\" \"npm run dev -w @listener/client\"",
    "build": "./build.sh",
    "start": "cd packages/server && npm run start",
    "test": "npm run test -ws --if-present",
    "test:quiet": "npm run test:quiet -ws --if-present",
    "test:summary": "npm run test:summary -ws --if-present", 
    "test:coverage": "npm run test:coverage -ws --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "db:reset": "supabase db reset && echo 'Local database reset complete'",
    "dev:full": "npm run supabase:start && npm run dev",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "migration:validate": "cd scripts && npm install && cd .. && node scripts/validate-migration.js",
    "backup-restore:test": "cd scripts && npm install && cd .. && node scripts/backup-restore-test.js",
    "test:migration": "npm run migration:validate && npm run backup-restore:test",
    "monitor:vault": "cd scripts && npm install && cd .. && node scripts/monitor-vault.js",
    "verify:vault-usage": "node scripts/verify-vault-usage.js",
    "monitor:vault-usage": "node scripts/vault-usage-monitor.js",
    "scripts:install": "cd scripts && npm install",
    "scripts:test": "cd scripts && npm test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "Listener application with Express backend and Vite frontend",
  "dependencies": {
    "@deepgram/sdk": "^4.0.1",
    "@supabase/supabase-js": "^2.49.7",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "fast-xml-parser": "^5.2.2",
    "http-proxy-middleware": "^3.0.5",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.7",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "concurrently": "^9.1.2",
    "dotenv-flow": "^4.1.0",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.7.2",
    "vitest": "^3.1.4"
  }
}
