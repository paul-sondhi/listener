{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": ".",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}