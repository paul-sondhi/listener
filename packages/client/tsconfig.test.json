{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": ".",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "setupTests.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}