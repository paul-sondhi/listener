{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../../",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "coverage",
    "setupTests.ts",
    "vitest.config.ts",
    "tests/**",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
} 