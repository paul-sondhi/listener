{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": ".",
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/__tests__/**",
    "setupTests.ts",
    "vitest.config.ts",
    "tests/**"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}